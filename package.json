{
  "name": "steam-deck-restock-checker",
  "version": "0.1.0",
  "description": "Automated Steam Deck restock monitoring using GitHub Actions. Borrowed from https://github.com/krzysztofradomski/scraper",
  "keywords": [
    "steam-deck",
    "restock",
    "puppeteer",
    "automation",
    "github-actions"
  ],
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "dist/check-steam-deck.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "check": "npm run build && node dist/check-steam-deck.js",
    "check:dev": "tsx check-steam-deck.ts",
    "check:lcd-256": "npm run build && node dist/check-steam-deck.js --device lcd-256",
    "check:lcd-512": "npm run build && node dist/check-steam-deck.js --device lcd-512",
    "check:oled-1tb": "npm run build && node dist/check-steam-deck.js --device oled-1tb",
    "check:oled-512": "npm run build && node dist/check-steam-deck.js --device oled-512",
    "devices": "npm run build && node dist/check-steam-deck.js --list-devices",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --cache --fix",
    "lint:check": "eslint . --cache",
    "prepare": "husky",
    "pretest": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "puppeteer": "^24.26.1",
    "pushover-notifications": "^1.2.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.2",
    "@types/yargs": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "sort-package-json": "^3.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "volta": {
    "node": "24.11.0"
  }
}
